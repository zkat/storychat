/*-----General styles-----*/

/*font sizes*/

$basefontsize = 1em;
$smallfontsize = .8em;
$largefontsize = 1.2em;


/*colors*/

$basegrey = #858585;
$lightgrey= #cecece;
$basemaroon = #700000;
$baseblue = #006699;


chat-output {
  display: block;
  font-family: sans-serif;
  padding-bottom: 1em;

  .debug {
    margin-left: 1em;
    color: $lightgrey;
    font-style: italic;
    font-size: $smallfontsize;

    &:before {
      content: "("
    }
    &:after {
      content: "ms)"
    }
  }

  entry-group-wrapper {
    display: block;
    padding-top: $basefontsize;
  }

  system-entry-group {
    font-size: $smallfontsize;
    color: $basegrey;
    font-style: italic;
  }

  slug-entry-group {
    background-color: $lightgrey;
    text-transform: uppercase;
    padding: .2em;
  }

  dialogue-entry-group {
    actor-container > * {
      display: inline-block;
    }
    actor {
      font-size: $largefontsize;
      font-weight: bold;
      margin-left: 2em;
    }
    parenthetical {
      color: $basegrey;
      font-size: $smallfontsize;
      font-weight: normal;
      font-style: italic;
      &:before { content: "("; }
      &:after { content: ")"; }
    }
    entries {
      display: block;
      margin-left: 4em;
      parenthetical {
        display: block;
        margin-left: -2em;
        &:first-child {
          display: none;
        }
      }
    }
  }

  action-entry-group {
    entry {
      + entry {
        padding-left: 0.4em;
      }
      verb {
        color: $basemaroon;
      }
      actor {
        display: inline;
        font-weight: bold;
      }
    }
  }

  ooc-entry-group {
    font-size: $smallfontsize;
    color: $basegrey;
    &:before {
      content: "(( OOC "
    }
    &:after {
      content: "))"
    }
    actor:after {
      content: ":"
    }
  }
}
