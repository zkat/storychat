<form class="{{type}}">
  {{renderInput type}}
  <button>Send</button>
</form>
<label>Input type:
  <select>
    {{#each inputs}}
    <option>{{name}}</option>
    {{/each}}
  </select>
</label>
<select name=character>
  {{#each characters}}
  <option {{#isCurrent .}}selected{{/isCurrent}} {{data "character"}}>{{name}}</option>
  {{/each}}
</select>