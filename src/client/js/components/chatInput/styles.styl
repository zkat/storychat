$basefontsize = 1em;
$smallfontsize = .8em;
$largefontsize = 1.2em;

$basegrey = #858585;
$lightgrey= #cecece;
$basemaroon = #700000;
$baseblue = #006699;

chat-input {
  display: block;
  background-color: white;
  font-family: sans-serif;
  border-bottom: solid 1px black;

  form {
    cursor: text;
    [name=content] {
      overflow: scroll;
      font-size: $basefontsize;
      border: none;
      width: 100%;
      height: 100%;
      resize: none;
      outline: none;
    }

    &.dialogue {
      actor {
        font-size: $largefontsize;
        font-weight: bold;
        margin-left: 2em;
      }
      [name=content] {
        margin-left: 4em;
        margin-right: 4em;
      }
    }

    &.action {
      position: relative;
      actor {
        position: absolute;
        top: 1px;
        left: 0;
        font-weight: bold;
      }
      [name=content] {
        padding: 0;
      }
    }

    &.ooc {
      font-size: $smallfontsize;
      color: $basegrey;
      [name=content] {
        color: $basegrey;
        width: auto;
        overflow: hidden;
        /* XXX HACK - This is temporary while autoresize is implemented */
        width: 80%;
      }
    }
  }
}