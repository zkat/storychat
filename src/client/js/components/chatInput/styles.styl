$basefontsize = 1em;
$smallfontsize = .8em;
$largefontsize = 1.2em;

chat-input {
  display: block;
  background-color: white;
  font-family: sans-serif;
  border-bottom: solid 1px black;
  min-height: 5em;

  form {
    cursor: text;
    &.dialogue {
      actor {
        font-size: $largefontsize;
        font-weight: bold;
        margin-left: 2em;
      }
      [name=content] {
        overflow: scroll;
        font-size: $basefontsize;
        margin-left: 4em;
        margin-right: 4em;
        border: none;
        width: 100%;
        height: 100%;
        resize: none;
        outline: none;
      }
    }
  }
}